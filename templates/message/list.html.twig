{% block body %}
{% if app.user != null %}

<body>
    <div class="d-flex justify-content-center vw-100">
        <div class="chatList p-2 rounded shadow mt-5">
            <div class="d-flex mb-3 p-3 justify-content-between align-items-center shadow">
