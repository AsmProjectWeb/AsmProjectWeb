{% block javascript %}
<script>
    $(document).ready(function(){

        $.ajax({
        url: '/message/list',
        data:{'name':''},
        success: function(users) {
            $('#list-group').empty();
            // data is the JSON response
            console.log(users);
            for (var i = 0; i < users.length; i++) {
                $('#list-group').append(
                    '<li class="list-group-item">' +
                        '<a href = "/message/chat/' + (users[i]['id'])+ '" class="d-flex justify-content-between align-item-center p-2">' +
                            '<div class="d-flex align-items-center">' +
                                '<img src="{{asset("uploads/")}}' + (users[i]['avatar'] != null ? users[i]['avatar'] : 'defaultProfile.jpg') + '" alt="" class="icon rounded-circle shadow">' +
                                '<h3 class="m-2" style="font-size: 1rem;">' + users[i]['username'] + '</h3>' +
                            '</div>' +
                        '</a>' +
                    '</li>'
                );
            }
        }
        });

        $("#searchText").on("input",function(){
            let searchText = $(this).val();
            $.ajax({
            url: '/message/list',
            data:{'name':searchText},
            success: function(users) {
                $('#list-group').empty();
                // data is the JSON response
                console.log(users);
                for (var i = 0; i < users.length; i++) {
                    $('#list-group').append(
                        '<li class="list-group-item">' +
                            '<a href = "/message/chat/' + (users[i]['id'])+ '" class="d-flex justify-content-between align-item-center p-2">' +
                                '<div class="d-flex align-items-center">' +
                                    '<img src="{{asset("uploads/")}}' + (users[i]['avatar'] != null ? users[i]['avatar'] : 'defaultProfile.jpg') + '" alt="" class="icon rounded-circle shadow">' +
                                    '<h3 class="m-2" style="font-size: 1rem;">' + users[i]['username'] + '</h3>' +
                                '</div>' +
                            '</a>' +
                        '</li>'
                    );
                }
            }
            });
            // console.log(searchText);
        })

        $("#searchButton").on("click",function(){
            let searchText = $("#searchText").val();
            $.ajax({
            url: '/message/list',
            data:{'name':searchText},
            success: function(users) {
                $('#list-group').empty();
                // data is the JSON response
                console.log(users);
                for (var i = 0; i < users.length; i++) {
                    $('#list-group').append(
                        '<li class="list-group-item">' +
                            '<a href = "/message/chat/' + (users[i]['id'])+ '" class="d-flex justify-content-between align-item-center p-2">' +
                                '<div class="d-flex align-items-center">' +
                                    '<img src="{{asset("uploads/")}}' + (users[i]['avatar'] != null ? users[i]['avatar'] : 'defaultProfile.jpg') + '" alt="" class="icon rounded-circle shadow">' +
                                    '<h3 class="m-2" style="font-size: 1rem;">' + users[i]['username'] + '</h3>' +
                                '</div>' +
                            '</a>' +
                        '</li>'
                    );
                }
            }
            });
            // console.log(searchText);
        })


    })
</script>
