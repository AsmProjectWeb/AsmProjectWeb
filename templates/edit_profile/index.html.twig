{% extends 'base.html.twig' %}
{% block body %}
<body>
	<div class="box">
		{# <form autocomplete="off"> #}
		{{ form_start(form,{'attr':{'autocomplete':'off'}}) }}
			<h2>Profile</h2>
			<div class="box-img">
				<img class="img" src="{{asset('images/koky-high-resolution-logo-color-on-transparent-background.png')}}" alt="">
			</div>
            <div class="mt-3">
                {{ form_widget(form.image) }}
            </div>
			<div class="inputBox">
				{# <input type="text" required="required"> #}
				{{ form_widget(form.username) }}
				<span>Username</span>
				<i></i>
			</div>
			<div class="inputBox">
				{# <input type="password" required="required"> #}
				{{ form_widget(form.password) }}
				<span>Password</span>
				<i></i>
			</div>
            <div class="inputBox">
				{# <input type="email" required="required"> #}
				{{ form_widget(form.email) }}
				<span>Email</span>
				<i></i>
            </div>
            <div class="inputBox">
				{# <input type="phone" required="required"> #}
				{{ form_widget(form.phone) }}
				<span>Phone</span>
				<i></i>
			</div>
            <div class="inputBox">
				<input 
					{# type="text"
					onfocus="(this.type='date')"
					onblur="(this.type='text')"
					required="required"> #}
				{{ form_widget(form.birthday, {'attr':{
					'type': 'text',
        			'onfocus': "this.type='date'",
        			'onblur': "this.type='text'",}}) }}
				<span>Birthday</span>
				<i></i>
			</div>
			<div class="mt-5">
				{{ form_widget(form.gender,{ 'attr': {'class': 'choices',}}) }}
            </div>
            <div class="inputBox">
				{{ form_widget(form.job) }}
				<span>Job</span>
				<i></i>
			</div>
            <div class="inputBox">
				{{ form_widget(form.hometown) }}
				<span>Home Town</span>
				<i></i>
			</div>
            <div class="inputBox">
				{{ form_widget(form.status) }}
				<span>Status</span>
				<i></i>
			</div>
			<input type="submit" class="mt-4" value="Update">
		{{ form_end(form) }}
		{# </form> #}
	</div>
</body>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');

	:root{
		--form-height:1150px;
	}

.choices label {
  display: inline-block;
  margin-right: 10px;
}

.choices label:first-child {
  margin-left: 20px;
}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Poppins', sans-serif;
	}

	body {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 100vh;
		flex-direction: column;
		background: #23242a;
	}

	.box-img{
		display: flex;
		justify-content: center;
	}

	.img{
		width: 100px;
		height: 100px;
		margin-top: 10px;
		
	}

	.box {
		position: relative;
		width: 380px;
		height: var(--form-height);
		background: #1c1c1c;
		border-radius: 8px;
		overflow: hidden;
	}

	.box::before {
		content: '';
		z-index: 1;
		position: absolute;
		top: -50%;
		left: -50%;
		width: 380px;
		height: var(--form-height);
		transform-origin: bottom right;
		background: linear-gradient(0deg, transparent, #8abe53, #8abe53);
		animation: animate 6s linear infinite;
	}

	.box::after {
		content: '';
		z-index: 1;
		position: absolute;
		top: -50%;
		left: -50%;
		width: 380px;
		height: var(--form-height);
		transform-origin: bottom right;
		background: linear-gradient(0deg, transparent, #8abe53, #8abe53);
		animation: animate 6s linear infinite;
		animation-delay: -3s;
	}

	@keyframes animate {
		0% {
			transform: rotate(0deg);
		}

		100% {
			transform: rotate(360deg);
		}
	}

	form {
		position: absolute;
		inset: 2px;
		background: #28292d;
		padding: 50px 40px;
		border-radius: 8px;
		z-index: 2;
		display: flex;
		flex-direction: column;
	}
	form {
		color: #8f8f8f;
	}
	h2 {
		color: #8abe53;
		font-weight: 500;
		text-align: center;
		letter-spacing: 0.1em;
	}

	.inputBox {
		position: relative;
		width: 300px;
		margin-top: 35px;
	}

	.inputBox input {
		position: relative;
		width: 100%;
		padding: 20px 10px 10px;
		background: transparent;
		outline: none;
		box-shadow: none;
		border: none;
		color: #23242a;
		font-size: 1em;
		letter-spacing: 0.05em;
		transition: 0.5s;
		z-index: 10;
	}

	.inputBox span {
		position: absolute;
		left: 0;
		padding: 20px 0px 10px;
		pointer-events: none;
		font-size: 1em;
		color: #8f8f8f;
		letter-spacing: 0.05em;
		transition: 0.5s;
	}

	.inputBox input:valid~span,
	.inputBox input:focus~span {
		color: #8abe53;
		transform: translateX(0px) translateY(-34px);
		font-size: 0.75em;
	}

	.inputBox i {
		position: absolute;
		left: 0;
		bottom: 0;
		width: 100%;
		height: 2px;
		background: #8abe53;
		border-radius: 4px;
		overflow: hidden;
		transition: 0.5s;
		pointer-events: none;
		z-index: 9;
	}

	.inputBox input:valid~i,
	.inputBox input:focus~i {
		height: 44px;
	}

	.links {
		display: flex;
		justify-content: space-between;
	}

	.links a {
		margin: 10px 0;
		font-size: 0.75em;
		color: #8f8f8f;
		text-decoration: beige;
	}

	.links a:hover,
	.links a:nth-child(2) {
		color: #8abe53;
	}

	input[type="submit"] {
		border: none;
		outline: none;
		padding: 11px 25px;
		background: #8abe53;
		cursor: pointer;
		border-radius: 4px;
		font-weight: 600;
		width: 150px;
		margin-top: 10px;
	}

	input[type="submit"]:active {
		opacity: 0.8;
	}
</style>
{% endblock %}